#:kivy 1.11.0

<Button>:
  font_size: 40
  padding: [3,3]

<GridLayout>:
  spacing: [3,3]

<ButtonImage>:
  y: self.parent.y + (self.parent.height * .2)
  x: self.parent.x + (self.parent.width * .2)
  height: self.parent.height * .6
  width: self.parent.width * .6
  stretch: True

<Control>:
  orientation: 'horizontal'

  BoxLayout:
    orientation: 'vertical'
    size_hint: (.2, 1)

    Label:
      text: 'Toggle'
      size_hint: (1, 0.1)
      font_size: 40

    GridLayout:
      cols: 1
      padding: [5]

      Button:
        text: 'Lock'
        on_press: root.printName('Lock')

      Button: 
        text: 'Lights'
        on_press: root.printName('Lights')


  BoxLayout:
    size_hint: (0.4, 1)
    orientation: 'vertical'

    Label:
      text: 'Windows'
      size_hint: (1, 0.1)
      font_size: 40

    GridLayout:
      cols: 2
      padding: [5]

      Button:
        on_press: root.printName('FD UP')
        ButtonImage:
          source: 'up_arrow.png'
          
      Button:
        on_press: root.printName('FP UP')
        ButtonImage:
          source: 'up_arrow.png'

      Button:
        on_press: root.printName('FD DWN')
        ButtonImage:
          source: 'down_arrow.png'

      Button:
        on_press: root.printName('FP DWN')
        ButtonImage:
          source: 'down_arrow.png'

      Button:
        on_press: root.printName('RD UP')
        ButtonImage:
          source: 'up_arrow.png'

      Button:
        on_press: root.printName('RP UP')
        ButtonImage:
          source: 'up_arrow.png'

      Button:
        on_press: root.printName('RD DWN')
        ButtonImage:
          source: 'down_arrow.png'

      Button:
        on_press: root.printName('RP DWN')
        ButtonImage:
          source: 'down_arrow.png'


  BoxLayout:
    size_hint: (0.4, 1)
    orientation: 'vertical'

    Label:
      text: 'Hydraulics'
      size_hint: (1, 0.1)
      font_size: 40

    GridLayout:
      cols: 2
      padding: [5]

      Button:
        text: '1'
        on_press: root.printName('1')

      Button:
        text: '2'
        on_press: root.printName('2')

      Button:
        text: '3'
        on_press: root.printName('3')

      Button:
        text: '4'
        on_press: root.printName('4')

      Button:
        text: '5'
        on_press: root.printName('5')

      Button:
        text: '6'
        on_press: root.printName('6')



