#:kivy 1.11.0

<Button>:
  font_size: 40
  padding: [3,3]

<GridLayout>:
  spacing: [3,3]

<Control>:
  orientation: 'horizontal'

  BoxLayout:
    orientation: 'vertical'
    size_hint: (.2, 1)

    Label:
      text: 'Toggle'
      size_hint: (1, 0.1)
      font_size: 40

    GridLayout:
      cols: 1
      padding: [5]

      Button:
        text: 'Lock'
        # size_hint_y: .45
        on_press: root.printName('Lock')

      Button: 
        text: 'Lights'
        # size_hint_y: .45
        on_press: root.printName('Lights')


  BoxLayout:
    size_hint: (0.4, 1)
    orientation: 'vertical'

    Label:
      text: 'Windows'
      size_hint: (1, 0.1)
      font_size: 40

    GridLayout:
      cols: 2
      padding: [5]

      Button:
        text: '1'
        on_press: root.printName('FD UP')

      Button:
        text: '2'
        on_press: root.printName('FD DWN')

      Button:
        text: '3'
        on_press: root.printName('RD UP')

      Button:
        text: '4'
        on_press: root.printName('RD DWN')

      Button:
        text: '5'
        on_press: root.printName('FP UP')

      Button:
        text: '6'
        on_press: root.printName('FP DWN')

      Button:
        text: '7'
        on_press: root.printName('RP UP')

      Button:
        text: '8'
        on_press: root.printName('RP DWN')

  BoxLayout:
    size_hint: (0.4, 1)
    orientation: 'vertical'

    Label:
      text: 'Hydraulics'
      size_hint: (1, 0.1)
      font_size: 40

    GridLayout:
      cols: 2
      padding: [5]

      Button:
        text: '1'
        on_press: root.printName('FD UP')

      Button:
        text: '2'
        on_press: root.printName('FD DWN')

      Button:
        text: '3'
        on_press: root.printName('RD UP')

      Button:
        text: '4'
        on_press: root.printName('RD DWN')

      Button:
        text: '5'
        on_press: root.printName('FD UP')

      Button:
        text: '6'
        on_press: root.printName('FD DWN')



